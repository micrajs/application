{
  "name": "@micra/application",
  "version": "0.1.0-next.5",
  "description": "Micra's isomorphic application class",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/micrajs/application.git"
  },
  "author": "Olavo Amorim Santos<olavo.santos@micra.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/micrajs/community/issues?q=is:issue+is:open+label:%22Project:+application%22+label:%22Type:+fix%22"
  },
  "exports": {
    ".": {
      "import": "./index.mjs",
      "require": "./index.js",
      "types": "./index.d.ts"
    },
    "./sync": {
      "import": "./sync.mjs",
      "require": "./sync.js",
      "types": "./sync.d.ts"
    }
  },
  "scripts": {
    "build:code": "vite build --config .viterc.ts",
    "build:types": "tsc -p tsconfig.json && tsc-alias --silent -p tsconfig.json --dir .",
    "build": "concurrently 'pnpm:build:*'",
    "dev:code": "pnpm build:code -- --watch",
    "dev:types": "nodemon --ext 'ts,tsx' --exec 'pnpm build:types'",
    "dev": "concurrently 'pnpm:dev:*'",
    "lint": "eslint --ext .ts,.tsx .",
    "prepare:husky": "husky install .config/husky",
    "test:coverage": "vitest run --coverage --config .viterc.ts",
    "test:dev": "vitest --config .viterc.ts",
    "test": "vitest run --config .viterc.ts",
    "version:prerelease": "npm version prerelease --preid=next --allow-same-version && git push --follow-tags"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@micra/commit-lint-config": "next",
    "@micra/core": "next",
    "@micra/core-test-utils": "next",
    "@micra/eslint-config": "next",
    "@micra/faker": "next",
    "@micra/typescript-config": "next",
    "@micra/vite-config": "next",
    "@types/node": "^17.0.25",
    "c8": "^7.11.2",
    "concurrently": "^7.1.0",
    "eslint": "^8.14.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "tsc-alias": "^1.6.6",
    "typescript": "^4.6.3",
    "vite": "^2.9.5",
    "vitest": "^0.9.4"
  },
  "dependencies": {
    "@micra/configuration": "next",
    "@micra/environment": "next",
    "@micra/error": "next",
    "@micra/event-emitter": "next",
    "@micra/service-container": "next"
  }
}
